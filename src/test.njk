{% asyncEach work in collections.worksSortedRespectingOrder %}
    <div id="{{ work.fileSlug }}" class="workContainer">
        {# {% include "test-work.njk" %} #}
        <div class="workInfo">
            <div class="extra">
                {{ work.data.extra }}
            </div>
            <div class="title">
                {{ work.data.title }}
            </div>
        </div>
        <div class="imagesContainer">
            {% asyncEach image in work.data.images %}
                {% image image,
                    "",
                    [250, 300, 400, 450, 500, 550, 600, 650, 700, 750, 800, 'auto'],
                    "(max-width: 250px) calc(250px - max(5vw,30px)),
                        calc(100vw - max(5vw,30px))
                    "
                %}
            {% endeach %}
        </div>
    </div>
{% endeach %}

