<header {% if '/info' not in page.url %}itemscope itemtype="https://schema.org/Person"{% endif %}>
    <a class="name" href="{{ "/" | locale_url }}"><span itemprop="name">{{ 'header.name' | i18n }}</span></a>
    <a class="headerbutton" href="{{ "/info/" | locale_url }}" itemprop="sameAs">
        {% include "../assets-inline/svg/info-icon.svg" %}
    </a>
    {% for link in page.url | locale_links %}
        <a class="headerbutton langbutton"
            href="{{ link.url }}"
            lang="{{ link.lang }}"
            hreflang="{{ link.lang }}"
            title="{{ link.label }}"
            onclick="window.location='{{ link.url }}' + window.location.hash; event.preventDefault();"
            >{{ link.lang | toUpperCase }}</a>
    {% endfor %}
</header>