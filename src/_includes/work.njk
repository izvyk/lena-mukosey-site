---
title: 'Lena Mukosey - single work test'
style: 'work.css'
layout: 'base.njk'
---

<div id="imagesContainer">
    {% asyncEach image in images %}
        {% image image,
            "",
            [250, 300, 400, 450, 500, 550, 600, 650, 700, 750, 800, 'auto'],
            "(max-width: 250px) calc(250px - max(5vw,30px)),
             calc(100vw - max(5vw,30px))
            "
        %}
    {% endeach %}
</div>
<div id="drawer">
    <div class="arrow up">
        {% include "../assets-inline/svg/arrow-right.svg" %}
    </div>
    <div id="firstline">
        <div class="arrow prev">
            {% set previousPost = collections.worksSortedRespectingOrder | getPreviousCollectionItem %}
            <a tabindex="-1" href="{{ previousPost.url }}"><span tabindex="0"></span></a>
            {% include "../assets-inline/svg/arrow-left.svg" %}
        </div>
        <div id="description">
            <div id="title">
                {{ title }}
            </div>
            <div id="extra">
                {{ extra }}
            </div>
        </div>
        <div class="arrow next">
            {% set nextPost = collections.worksSortedRespectingOrder | getNextCollectionItem %}
            <a tabindex="-1" href="{{ nextPost.url }}"><span tabindex="0"></span></a>
            {% include "../assets-inline/svg/arrow-right.svg" %}
        </div>
    </div>
    
    <div id="text">
        {{ text }}
        {% include "default-footer-content.njk" %}
    </div>
</div>