        <link rel="icon" href="/assets/favicon/favicon_for_dark.png" type="image/png" media="(prefers-color-scheme: dark)" sizes="any">
        <link rel="icon" href="/assets/favicon/favicon_for_light.png" type="image/png" media="(prefers-color-scheme: light)" sizes="any">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;500&display=swap" rel="stylesheet">

        <link rel="alternate" hreflang="{{ page.lang }}" href="{{ page.url }}">
        {% for link in page.url | locale_links %}
          <link rel="alternate" hreflang="{{ link.lang }}" href="{{ link.url }}">
        {% endfor %}

        {% if scss is defined %}
            {# <link rel="stylesheet" type="text/css" href="{{ style | prefixWithStylesPath | rev }}"> #}
            <style>
                {{ scss | safe }}
            </style>
        {% endif %}
    {% endblock %}
</head>
<body {% if '/info' in page.url %} itemscope itemtype="https://schema.org/Person" {% endif %}>
    {% block header %}
        {% include 'default-header.njk' %}
    {% endblock %}

    {% block content %}
        <main>
            {{ content | safe }}
        </main>
    {% endblock %}

    {% block footer %}
        {% include 'default-footer.njk' %}
    {% endblock footer %}

    {% if script is defined %}
        {% set js %}
            {% include "../assets-inline/script/" + script %}
        {% endset %}
        <script>
            {{ js | safe }}
        </script>
    {% endif %}

</body>
</html>