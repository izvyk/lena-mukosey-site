<div class="card" itemscope itemtype="https://schema.org/CreativeWork">
    <div class="imageContainer">
        {% image work.data.images[0],
            "Alt!",
            [250, 300, 350, 400, 450, 500, 550, 600, 650, 700, 750, 800, 'auto'],
            "(max-width: 250px) calc(250px - max(5vw,30px)),
             (max-width: 425px) calc(100vw - max(5vw,30px)),
             (max-width: 645px) calc((100vw - max(5vw,30px) - 20px) / 2),
             (max-width: 867px) calc((100vw - max(5vw,30px) - 20px) / 3),
             (max-width: 1089px) calc((100vw - max(5vw,30px) - 20px) / 4),
             (max-width: 1310px) calc((100vw - max(5vw,30px) - 20px) / 5),
             calc((100vw - max(5vw,30px) - 20px) / 6)
            "
        %}
    </div>
    <div class="description">
        <p class="title">
            <a href="/works#{{ work.data.titleEnglish | slugify }}" itemprop="url">
                <span itemprop="name">{{ work.data.title }}</span>
                <span class="a"></span>
            </a>
        </p>
        <p class="extra">
            <span itemprop="material">{{ work.data.extra }}</span>
            <span itemprop="size">{{ work.data.size }}</span>
        </p>
    </div>
    {# <a tabindex="-1" href="/works#{{ work.data.titleEnglish | slugify }}"><span tabindex="0"></span></a> #}
</div>